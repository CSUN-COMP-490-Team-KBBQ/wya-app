{
    "root": true,
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "../.eslintrc.json"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": ["functions/tsconfig.json", "functions/tsconfig.dev.json"],
        "sourceType": "module"
    },
    "ignorePatterns": [
        "/lib/**/*" // Ignore built files.
    ],
    "plugins": [
        "@typescript-eslint",
        "import"
    ],
    "rules": {
        "quotes": ["error", "single"],
        "import/no-unresolved": 0,
        "import/prefer-defer-export": "off",
        "indent": ["error", 4]
    }
}